<UserControl x:Class="Process_Page.Cards.Measurement_Step"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Process_Page.Cards"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             xmlns:utils="clr-namespace:Process_Page.Util"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <materialDesign:Card  Margin="10">
            <Viewbox Stretch="Uniform">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0" Stretch="Uniform" Margin="20,0">
                        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                            Style="{StaticResource MaterialDesignHeadlineTextBlock}">
                            <TextBlock.Text>Measurement</TextBlock.Text>
                        </TextBlock>
                    </Viewbox>

                    <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}" Margin="8,0,8,0"></Separator>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60*"></ColumnDefinition>
                            <ColumnDefinition Width="40*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Viewbox Grid.Column="0" Margin="10">
                            <TextBlock Text="Measure (mm) : "
                                Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        </Viewbox>
                        <Viewbox Grid.Column="1" Stretch="Uniform" Margin="20">
                            <utils:NumericUpDown x:Name="TeethActualSize" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                                 Width="90"
                                                 Value="8.0" Minimum="7.8" Maximum="10.0" StepValue="0.01"></utils:NumericUpDown>
                        </Viewbox>
                    </Grid>
                    <Button Grid.Row="3" Margin="50,20" Content="측 정" Click="SetMeasurement"></Button>

                    <Separator Grid.Row="4" Style="{StaticResource MaterialDesignDarkSeparator}" Margin="8,0,8,0"></Separator>
                    <Button Grid.Row="5" Margin="50,20" Content="정 렬" Command="{Binding TeethRefSelected}"></Button>
                </Grid>
            </Viewbox>
        </materialDesign:Card>
    </Grid>
</UserControl>
