<UserControl x:Class="Process_Page.Util.MouthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Process_Page.Util"
             mc:Ignorable="d" 
             Name="MouthPointsControl"
             d:DesignHeight="500" d:DesignWidth="800">
    <Canvas>
        <Path x:Name="DrawLine" Stroke="{Binding PathColor, ElementName=MouthPointsControl}" StrokeThickness="0.5"/>

        <ListBox x:Name="MouthPointsList"
            ItemsSource="{Binding MouthPoint, ElementName=MouthPointsControl}"
            ItemContainerStyle="{StaticResource PointListBoxItemStyle}">
            <ListBox.Template>
                <ControlTemplate>
                    <Canvas IsItemsHost="True"/>
                </ControlTemplate>
            </ListBox.Template>
        </ListBox>
    </Canvas>
</UserControl>
